<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_doc_item_swipe"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/id_doc_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/id_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/id_doc_item_name"
            android:layout_below="@id/id_doc_item_name"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/id_live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/id_doc_item_name"
            android:gravity="center"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>