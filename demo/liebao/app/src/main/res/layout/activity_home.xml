<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/cc_txt"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/id_home_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/joinclass_button"
        android:text="Start Live Video"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/id_home_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_home_scan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/joinclass_button"
        android:text="Watch \u0026 Beam"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/id_main_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"/>


</RelativeLayout>
